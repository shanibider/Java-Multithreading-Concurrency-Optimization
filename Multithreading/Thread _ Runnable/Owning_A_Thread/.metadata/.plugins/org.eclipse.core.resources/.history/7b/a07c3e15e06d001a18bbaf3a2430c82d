
public class MyTask implements Task {

	// Data members:
	private int num;
	private Boolean isOn;
	
	public MyTask() {
		this.num = 0;
		this.isOn = true;
	}
	
	@Override
	public void doTask() {
		// in MyTask class we create a thread using lambda expression!
		new Thread(() -> {
			while(isOn == true) {
				num++;
			}
		}).start();
	}
	
	public void stopTask() {
		
	}
}
