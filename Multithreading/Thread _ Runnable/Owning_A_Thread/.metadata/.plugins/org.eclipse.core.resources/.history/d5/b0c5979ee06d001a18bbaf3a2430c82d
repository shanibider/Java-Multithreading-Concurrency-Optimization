
public class MyTask{

	// Data members:
	private int num;
	private Boolean isOn;
	
	// CTOR.
	public MyTask() {
		this.num = 0;
		this.isOn = true;
	}
	
	@Override
	public void doTask() {
		// in MyTask class we create a thread using lambda expression!
		new Thread(() -> {
			while(this.isOn == true) {
				num++;
			}
		}).start();
	}
	
	public void stopTask() {
		this.isOn = false;
	}
	
	public int getNum() {
		return this.num;
	}
}
