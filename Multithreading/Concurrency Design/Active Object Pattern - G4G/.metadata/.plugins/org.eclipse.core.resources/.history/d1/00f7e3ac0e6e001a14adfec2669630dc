package test;

import java.util.concurrent.PriorityBlockingQueue;

public class ActiveObject {

	// Task Class.
	class Task implements Comparable<Task> {

		// Data members:
		int priority;
		String name;
		
		// CTOR.
		public Task(int otherPriority, String otherName) {
			this.priority = otherPriority;
			this.name = otherName;
		}
		
		// Smaller numbers -> higher priority.
		@Override
		public int compareTo(Task otherTask) {
			return Integer.compare(this.priority, otherTask.priority);
		}
	}
	
	private PriorityBlockingQueue<Task> tasksQueue = new PriorityBlockingQueue<ActiveObject.Task>();
}
